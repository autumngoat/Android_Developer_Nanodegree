<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Set poster as background image -->
    <ImageView
        android:id="@+id/iv_background_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:alpha="0.4"/>

    <!-- Floating Action Button for adding/removing to favorites SQLite database -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/detail_fab_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_rating"
        android:textSize="36sp"
        android:layout_margin="8dp"
        style="@style/DetailTextViews"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/top_underscore"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <TextView
        android:id="@+id/tv_title"
        android:textSize="28sp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        style="@style/DetailTextViews"
        app:layout_constraintBottom_toTopOf="@id/gl_top"
        app:layout_constraintLeft_toRightOf="@id/tv_rating"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_original_title"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        style="@style/DetailTextViews"
        app:layout_constraintTop_toBottomOf="@id/gl_top"
        app:layout_constraintLeft_toRightOf="@id/tv_rating"/>

    <View
        android:id="@+id/top_underscore"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/gold_morning"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_original_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_rating"
        app:layout_constraintRight_toRightOf="@id/tv_original_language"/>

    <TextView
        android:id="@+id/tv_release_date"
        style="@style/DetailTextViews"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_underscore"
        app:layout_constraintLeft_toLeftOf="@id/tv_rating"/>

    <TextView
        android:id="@+id/tv_original_language"
        style="@style/DetailTextViews"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_underscore"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_summary"
        style="@style/DetailTextViews"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_release_date"
        android:background="#AA000000" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_trailer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_summary"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_review_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_trailer_list"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/iv_backdrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/rv_review_list"/>
</android.support.constraint.ConstraintLayout>